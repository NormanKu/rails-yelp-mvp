<h1>Add a New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], include_blank: "Select category" %>

  <%= f.button :submit, "Create Restaurant", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to review", restaurants_path, class: "btn btn-primary" %>
